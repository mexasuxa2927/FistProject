<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Click_item_page">

    <ImageView
        android:id="@+id/imageView_click_item"
        android:layout_width="370dp"
        android:layout_height="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="50sp"
        android:text="name"
        android:textColor="@color/black"
        android:id="@+id/name_item_click"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_click_item" />

    <TextView
        android:id="@+id/disc_click_item"
        android:layout_width="355dp"
        android:layout_height="164dp"
        android:text="asdadasdaads"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_item_click"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_click_item"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:background="@drawable/button_back_fon"
        android:backgroundTint="@null"
        android:text="ADD"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disc_click_item"
        app:layout_constraintVertical_bias="0.543">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>